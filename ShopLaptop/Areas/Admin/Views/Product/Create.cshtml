@using ShopLaptop.Models.DBContext;
@model ShopLaptop.Models.DBContext.Product
@using ShopLaptop.Models;
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header"><h3 class="text-center font-weight-light my-4">Thêm sản phẩm</h3></div>
                <div class="card-body">
                    @using (Html.BeginForm("Create", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, null, new { @class = "alert alert-danger" })
                        <div class="form-row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="small mb-1"><strong>Tên sản phẩm</strong></label>
                                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control py-4" } })
                                    @*@Html.ValidationMessageFor(model => model.UserName, null, new { @class = "alert alert-danger" })*@
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="small mb-1"><strong>Mã sản phẩm</strong></label>
                                    @Html.EditorFor(model => model.Code, new { htmlAttributes = new { @class = "form-control py-4l" } })
                                    @*@Html.ValidationMessageFor(model => model.Name, "", new { @class = "alert alert-danger" })*@
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="small mb-1"><strong>Đơn giá sản phẩm</strong></label>
                                    @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control py-4" } })
                                    @*@Html.ValidationMessageFor(model => model.Email, "", new { @class = "alert alert-danger" })*@
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="small mb-1"><strong>Thương hiệu</strong></label>
                                    <select name="Brand">

                                        @foreach (Category category in (List<Category>)ViewBag.Categorys)
                                        {
                                            <option value="@category.Name">@category.Name</option>
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="small mb-1"><strong>Màn hình</strong></label>
                                    @Html.EditorFor(model => model.Screen, new { htmlAttributes = new { @class = "form-control py-4" } })
                                    @*@Html.ValidationMessageFor(model => model.UserName, null, new { @class = "alert alert-danger" })*@
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="small mb-1"><strong>CPU</strong></label>
                                    @Html.EditorFor(model => model.CPU, new { htmlAttributes = new { @class = "form-control py-4l" } })
                                    @*@Html.ValidationMessageFor(model => model.Name, "", new { @class = "alert alert-danger" })*@
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="small mb-1"><strong>RAM</strong></label>
                                    @Html.EditorFor(model => model.RAM, new { htmlAttributes = new { @class = "form-control py-4" } })
                                    @*@Html.ValidationMessageFor(model => model.UserName, null, new { @class = "alert alert-danger" })*@
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="small mb-1"><strong>Card đồ họa</strong></label>
                                    @Html.EditorFor(model => model.Card, new { htmlAttributes = new { @class = "form-control py-4l" } })
                                    @*@Html.ValidationMessageFor(model => model.Name, "", new { @class = "alert alert-danger" })*@
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="small mb-1"><strong>Ổ cứng</strong></label>
                                    @Html.EditorFor(model => model.Disk, new { htmlAttributes = new { @class = "form-control py-4" } })
                                    @*@Html.ValidationMessageFor(model => model.UserName, null, new { @class = "alert alert-danger" })*@
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="small mb-1"><strong>Mô tả</strong></label>
                                    @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control py-4" } })
                                    @*@Html.ValidationMessageFor(model => model.Name, "", new { @class = "alert alert-danger" })*@
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="small mb-1"><strong>Số lượng</strong></label>
                                    @Html.EditorFor(model => model.Quantity, new { htmlAttributes = new { @class = "form-control py-4" } })
                                    @*@Html.ValidationMessageFor(model => model.Name, "", new { @class = "alert alert-danger" })*@
                                </div>
                            </div>
                        </div>
                        <label class="small mb-1"><strong>Ảnh sản phẩm</strong></label>
                        <div class="">
                            <input type="file" name="Image" id="Image" style="width:100%;" />
                        </div>
                        <div class="form-group mt-4 mb-0">
                            <input type="submit" value="Lưu" class="btn btn-primary btn-block" />
                        </div>
                    }
                    <form>
                    </form>
                </div>
                <div>
                    @Html.ActionLink("Danh sách", "Index", "Product", new { @class = "btn btn-warning", @style = "margin-left:1rem; margin-bottom:2rem" })
                </div>
            </div>
        </div>
    </div>
</div>
